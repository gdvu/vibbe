{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationDir": "types",
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "exclude": ["build", "src/**/*.test.tsx"]
}
